<%- include ('partials/header.ejs') %>

<div class="container">
  <h1>Cadastrar novo filme:</h1>
  <form action="/filmes/new" method="post">
    <label for="">Titulo:</label>
    <input type="text" name="titulo" id="" required />
    <label for="">Genero:</label>
    <input type="text" name="genero" id="" required />
    <label for="">Duração:</label>
    <input type="text" name="duracao" required />
    <br />
    <input type="submit" value="Cadastrar" />
    <input type="reset" value="Limpar" />
  </form>
  <br />
  <hr />
  <br />
  <table>
    <thead>
      <th style="width: 150px; text-align: left">Titulo</th>
      <th style="width: 200px; text-align: left">Genero</th>
      <th style="width: 150px; text-align: left">Duracao</th>
      <th style="width: 150px; text-align: left">Acoes</th>

    </thead>
    <tbody>
        <% filmes.forEach(filme=>{%>
            <tr>
                <td><%= filme.titulo %></td>
                <td><%= filme.genero %></td>
                <td><%= filme.duracao %></td>
                <td><a onclick="return confirm('deseja exluir o filme <%=filme.titulo%>?')" href="/filmes/delete/<%=filme.id %>">Excluir</a></td>
            </tr>
        <%})%>
      
    </tbody>
  </table>
</div>

<%- include ('partials/footer.ejs') %>
